/* pages/index/index.wxss */
.musicBox{
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  position: relative
}
.musicBoxTitle{
  width: 100%;
  height:100rpx;
  color: #ffffff;
  background: -webkit-linear-gradient(left, #A396B8 , #961BB8); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left,#A396B8 , #961BB8); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(left, #A396B8 , #961BB8); /* Firefox 3.6 - 15 */
  background: linear-gradient(to left, #A396B8 ,#961BB8); /* 标准的语法 */
 position: relative;
  line-height: 100rpx;
  font-size:30rpx;
}
.musicBoxTitle view{
  position: absolute;
  height: 100%;
  right: 20rpx;
  top: 5rpx;
  color: #0885E3;
  z-index: 2;
}
.musicBoxTitle text{
  display: block;
  -webkit-animation:myfirst2 10s linear infinite;
}
@-webkit-keyframes myfirst2 {
    0% {
    transform:translateX(0);
  }
  50% {
      transform:translateX(630rpx);
  }
  100% {
     transform:translateX(0rpx);
  }

}
.musicBoxBg{
  position: absolute;
  background: -webkit-linear-gradient(right, #A396B8 , #961BB8); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right,#A396B8 , #961BB8); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #A396B8 , #961BB8); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #A396B8 ,#961BB8); /* 标准的语法 */
  left: 0;
  right:0;
  top: 100rpx;
  bottom: 150rpx;
  overflow: hidden;
}
.musicBoxBg image{
  display: block;
  width: 100%;
  height: 100%;
}
.musicBoxBgTitle{
  position: absolute;
  left:275rpx;
  top: 20%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow:2rpx 2rpx 20rpx #ffffff;
  -webkit-animation:myfirst1 10s linear infinite;
}
@-webkit-keyframes myfirst1 {
    0% {
    transform:rotate(0deg);
    box-shadow:0px 0px 20rpx #ffffff;
  }
  50% {
    transform:rotate(180deg);
    box-shadow:0px 0px 90rpx #ffffff;
  }
  100% {
    transform:rotate(360deg);
    box-shadow:0px 0px 20rpx #ffffff;
  }
}
.musicBoxBnt{
  position: absolute;
  width: 100%;
  height: 150rpx;
  bottom: 0;
  left: 0;
   background: -webkit-linear-gradient(top, #A396B8 , #961BB8); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(top,#A396B8 , #961BB8); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(top, #A396B8 , #961BB8); /* Firefox 3.6 - 15 */
  background: linear-gradient(to top, #A396B8 ,#961BB8); /* 标准的语法 */
}
.musicBoxBnt_back,.musicBoxBnt_next{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.6);
  color: #ffffff;
  text-align: center;
  line-height: 100rpx;
  font-size: 24rpx;
  top:25rpx;
}
.musicBoxBnt_back{
  left: 20%;
}
.musicBoxBnt_next{
  right: 20%;
}
.musicBoxBnt_play,.musicBoxBnt_stop{
   width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.6);
  color: #ffffff;
  text-align: center;
  line-height: 120rpx;
  font-size: 24rpx;
  margin: 0 auto;
  margin-top: 15rpx;
}